            </window>
        </east>
        <center autoscroll="true" flex="true">
            <include style="padding:3px;" id="xcontents" />
        </center>
        <south style="background-color:#DDD" size="3%" border="none">
            <div align="center">
                <label id="bar" value="Todos Direitos Reservados Â©"/>
            </div>
        </south>
    </borderlayout>
